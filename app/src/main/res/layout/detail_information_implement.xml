<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_details_cs">

    <include layout = "@layout/app_bar_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/siteOwnerDisplaytv"
            android:gravity="center"
            android:padding="2sp"
            android:layout_marginLeft="20dp"
            android:textSize="23sp"
            android:lines="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15sp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5sp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_car"
                android:layout_marginRight="9dp"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_car_duration"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="2dp"
                android:textSize="18dp"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Provider Name"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:layout_marginTop="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Provider Name"
            android:id="@+id/tvProviderName"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Address"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:layout_marginTop="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Address"
            android:id="@+id/tvCompleteAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginLeft="15sp"/>


        <TextView
            android:layout_marginTop="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Postal Code"
            android:id="@+id/tvPostalCode"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginLeft="15sp"/>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/float_transparent"
        android:textColor="@color/colorAccent"
        android:text="View more details >>"
        android:layout_marginTop="15sp"
        android:textStyle="italic"
        android:id="@+id/btnViewMoreDetails"
        android:onClick="onViewMoreDetailsClicked"
        />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve"
        android:layout_marginTop="60sp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorButton"
        android:textColor="@color/white"
        android:id="@+id/btnReserve"
        android:onClick="onReserveClicked"/>







</LinearLayout>