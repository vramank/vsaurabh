<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/app_bar_normal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Summary"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESERVATION for EV: "
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ford Focus "
            android:id="@+id/summary_tv_carName"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="site id: "

            android:layout_marginLeft="10sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="334 "
            android:id="@+id/summary_tv_siteID"

            android:layout_marginLeft="5sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner: "

            android:layout_marginLeft="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musee canadian de la nature "
            android:id="@+id/summary_tv_owner"

            android:layout_marginLeft="5sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="240 McLeod "
        android:id="@+id/summary_tv_address1"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ottawa, ON, Canada, K2P 2R1"
        android:id="@+id/summary_tv_address2"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15sp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Start: "
            android:textSize="20sp"
            android:textStyle="bold"

            android:layout_marginLeft="10sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:id="@+id/summary_tvStartTime"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="End: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="60sp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:id="@+id/summary_tvEndTime"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/00 "
                android:id="@+id/summary_tvDate"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port Type: "

                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FastDC: CHAdeMO"
                android:id="@+id/summary_tvPort"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charging Rates"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Price (per half hour): "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:id="@+id/tvUnitPrice"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Price: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:id="@+id/summary_tvReservationPrice"
                android:textSize="20sp"

                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HST:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:id="@+id/tvHst"
                android:textSize="20sp"

                android:layout_marginLeft="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total charges:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textColor="#fa2a2a"
                android:id="@+id/tvtotalCharges"
                android:textSize="20sp"

                android:layout_marginLeft="10sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:textColor="@color/white"
                android:layout_marginRight="10sp"
                android:text="Modify Reservation"
                android:padding="10sp"
                android:textAllCaps="false"
                android:onClick="goBack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:textColor="@color/white"
                android:layout_marginLeft="10sp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:onClick="onConfirmClicked"/>

        </LinearLayout>

        </LinearLayout>
</LinearLayout>
